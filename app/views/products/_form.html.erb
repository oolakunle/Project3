    <%= form.label :description %>
    <%= form.text_area :description, id: :product_description %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.text_area :image, id: :product_image %>
  </div>

  <div class="field">
    <%= form.label :suburb %>
    <%= form.text_field :suburb, id: :product_suburb %>
  </div>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.number_field :category_id, id: :product_category_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
