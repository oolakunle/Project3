<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th>Suburb</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <% if product.image.present? %>
        <td><%= image_tag product.image, :width => 150, :height => 150, :alt => product.title, :class => 'thumb' %></td>
        <% else %>
        <td><%= product.title %></td>
        <% end %>
        <td><%= product.suburb %></td>
        <td><%= product.category_id %></td>
        <td><%= link_to 'Show', product %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
